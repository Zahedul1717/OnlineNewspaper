@model IEnumerable<OnlineNewspaper.Models.NewsDetails>

@{
    ViewData["Title"] = "ManageNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>সংবাদ ম্যানেজ  করুন</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:15%">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="width:35%">
                <p style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2;-webkit-box-orient: vertical;">
                    @Html.DisplayFor(modelItem => item.NewsBody)
                </p>
            </td>
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td style="width:5%">
                @Html.DisplayFor(modelItem => item.NewsCategory.NewsCategoryID)
            </td>
            <td>
                <a class="btn-warning"  style="padding:10px" asp-action="Edit" asp-route-id="@item.NewsDetailsID">Edit</a> 
                <a class="btn-danger" style="padding:10px" asp-action="Delete" asp-route-id="@item.NewsDetailsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
